# Autonomous Business System Environment Variables
# LoanFlow Personal Loan Management System
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="LoanFlow Autonomous Business System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG="true"
HOST="0.0.0.0"
PORT="5000"
SECRET_KEY="your-secret-key-here-change-in-production"
TIMEZONE="UTC"

# Database Configuration
# Primary MySQL Database
DB_TYPE="mysql"
DB_HOST="localhost"
DB_PORT="3306"
DB_NAME="loanflow_autonomous"
DB_USERNAME="loanflow_user"
DB_PASSWORD="secure_password_123"
DB_CHARSET="utf8mb4"
DB_POOL_SIZE="20"
DB_MAX_OVERFLOW="30"
DB_POOL_TIMEOUT="30"
DB_POOL_RECYCLE="3600"
DB_ECHO="false"

# Backup PostgreSQL Database
BACKUP_DB_HOST="localhost"
BACKUP_DB_PORT="5432"
BACKUP_DB_NAME="loanflow_backup"
BACKUP_DB_USERNAME="postgres"
BACKUP_DB_PASSWORD="backup_password_456"

# MongoDB Document Store
MONGO_HOST="localhost"
MONGO_PORT="27017"
MONGO_DB_NAME="loanflow_documents"
MONGO_USERNAME="mongo_user"
MONGO_PASSWORD="mongo_password_789"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB_MAIN="0"
REDIS_DB_CACHE="1"
REDIS_DB_SESSION="2"
REDIS_DB_QUEUE="3"
REDIS_SOCKET_TIMEOUT="5"
REDIS_MAX_CONNECTIONS="50"
REDIS_DEFAULT_TIMEOUT="3600"

# AI Services Configuration
# OpenAI
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS="4000"
OPENAI_TEMPERATURE="0.7"
OPENAI_TIMEOUT="30"

# Machine Learning Models
ML_MODELS_PATH="models/"
RISK_ASSESSMENT_MODEL="models/risk_assessment_model.pkl"
FRAUD_DETECTION_MODEL="models/fraud_detection_model.pkl"
CREDIT_SCORING_MODEL="models/credit_scoring_model.pkl"
RISK_THRESHOLD="0.7"
FRAUD_THRESHOLD="0.8"

# Security Configuration
# JWT Settings
JWT_SECRET_KEY="jwt-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES="30"
JWT_REFRESH_TOKEN_EXPIRE_DAYS="7"

# Password Settings
PASSWORD_MIN_LENGTH="8"
PASSWORD_REQUIRE_UPPERCASE="true"
PASSWORD_REQUIRE_LOWERCASE="true"
PASSWORD_REQUIRE_NUMBERS="true"
PASSWORD_REQUIRE_SPECIAL_CHARS="true"
PASSWORD_HASH_ALGORITHM="argon2"

# Rate Limiting
RATE_LIMITING_ENABLED="true"
RATE_LIMIT_DEFAULT="100 per hour"
RATE_LIMIT_LOGIN="5 per minute"
RATE_LIMIT_API="1000 per hour"

# CORS Settings
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_HEADERS="Content-Type,Authorization"

# SSL/TLS Settings
SSL_ENABLED="false"
SSL_CERT_FILE="certs/server.crt"
SSL_KEY_FILE="certs/server.key"

# Email Configuration
# SMTP Settings
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_USE_TLS="true"
SMTP_USE_SSL="false"

# Email Templates
EMAIL_TEMPLATES_PATH="templates/email/"
EMAIL_DEFAULT_SENDER="noreply@loanflow.com"

# Email Queues
EMAIL_QUEUE_HIGH="email_high"
EMAIL_QUEUE_NORMAL="email_normal"
EMAIL_QUEUE_LOW="email_low"

# Payment Gateway Configuration
# Stripe
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# PayPal
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_MODE="sandbox"

# Bank Integration - Plaid
PLAID_CLIENT_ID="your_plaid_client_id"
PLAID_SECRET="your_plaid_secret"
PLAID_ENVIRONMENT="sandbox"

# Monitoring and Logging
# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE_PATH="logs/autonomous_system.log"
LOG_MAX_FILE_SIZE="10MB"
LOG_BACKUP_COUNT="5"

# Metrics Collection
METRICS_ENABLED="true"
PROMETHEUS_ENABLED="true"
PROMETHEUS_PORT="9090"

# Health Checks
HEALTH_CHECKS_ENABLED="true"
HEALTH_CHECK_INTERVAL="60"

# Alerting
ALERTS_ENABLED="true"
ALERT_EMAIL_RECIPIENTS="admin@loanflow.com"
SLACK_WEBHOOK_URL="https://hooks.slack.com/your-webhook-url"

# Business Logic Configuration
# Loan Processing
LOAN_MIN_AMOUNT="1000"
LOAN_MAX_AMOUNT="50000"
LOAN_MIN_TERM_MONTHS="6"
LOAN_MAX_TERM_MONTHS="60"
LOAN_INTEREST_RATE_MIN="5.0"
LOAN_INTEREST_RATE_MAX="25.0"
