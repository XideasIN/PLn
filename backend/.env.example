# Feature Flags
FEATURE_AUTONOMOUS_LOAN_PROCESSING="true"
FEATURE_AI_CUSTOMER_SERVICE="true"
FEATURE_AUTOMATED_SEO="true"
FEATURE_FRAUD_DETECTION="true"
