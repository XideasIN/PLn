# Automated Decisions
AUTO_APPROVE_THRESHOLD="0.9"
AUTO_REJECT_THRESHOLD="0.3"
MANUAL_REVIEW_MIN="0.3"
MANUAL_REVIEW_MAX="0.9"

# SEO and Marketing Configuration
# Keywords
SEO_PRIMARY_KEYWORDS="personal loans,quick loans,online lending"
SEO_SECONDARY_KEYWORDS="bad credit loans,debt consolidation,emergency loans"

# Content Generation
CONTENT_BLOG_FREQUENCY="daily"
CONTENT_SOCIAL_MEDIA_FREQUENCY="hourly"

# Backlink Strategy
BACKLINK_TARGET_DOMAINS="finance.yahoo.com,nerdwallet.com,creditkarma.com"
